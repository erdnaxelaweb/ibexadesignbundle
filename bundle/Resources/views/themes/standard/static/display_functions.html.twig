{% extends '@StaticFakeDesign/static/display_functions.html.twig' %}

{% block display_content %}
    {% set viewParameters = getContentViewControllerParameters(content, {
        "viewType": viewType,
        "params": parameters ?? {}
    }) %}
    {% if isEsi|default(false) %}
        {{ render_esi(controller(
            "ibexa_content:viewAction",
            viewParameters
        )) }}
    {% else %}
        {{ render(controller(
            "ibexa_content:viewAction",
            viewParameters
        )) }}
    {% endif %}
{% endblock %}

{% block display_block %}
    {% set viewParameters = {
        'locationId': block.locationId,
        'contentId': block.contentId,
        'blockId': block.id,
        'versionNo': block.versionNo,
        'languageCode': block.languageCode
    } %}
    {% if isEsi|default(true) %}
        {{ render_esi(controller(
            'Ibexa\\Bundle\\FieldTypePage\\Controller\\BlockController::renderAction',
            viewParameters
        )) }}
    {% else %}
        {{ render(controller(
            'Ibexa\\Bundle\\FieldTypePage\\Controller\\BlockController::renderAction',
            viewParameters
        )) }}
    {% endif %}
{% endblock %}

{% block display_component %}
    {% if controllerAction %}
        {% if isEsi|default(true) %}
            {{ render_esi(controller(
                controllerAction,
                parameters
            )) }}
        {% else %}
            {{ render(controller(
                controllerAction,
                parameters
            )) }}
        {% endif %}
    {% else %}
        {% include template with parameters only %}
    {% endif %}
{% endblock %}
